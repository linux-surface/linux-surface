-	// validate control-frame CRC
-	if (!surfacegen5_ssh_is_valid_crc(ctrl_begin, ctrl_end)) {
-		dev_err(dev, SG5_RECV_TAG "invalid checksum (cmd-ctrl)\n");
-		/*
