-	// throw away the evaluated parts
-	rcv->eval_buf.len -= offs;
-	memmove(rcv->eval_buf.ptr, rcv->eval_buf.ptr + offs, rcv->eval_buf.len);
-
-	spin_unlock_irqrestore(&rcv->lock, flags);
-
-	return used;
