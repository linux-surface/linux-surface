-
-	poll_wait(file, &client->ddev->waitq, pt);
-
-	if (client->ddev->active) {
-		mask = EPOLLOUT | EPOLLWRNORM;
-	} else {
-		mask = EPOLLHUP | EPOLLERR;
-	}
-
-	if (client->buffer_head != client->buffer_tail) {
-		mask |= EPOLLIN | EPOLLRDNORM;
-	}
-
-	return mask;
