+static int ov5693_update_bits(struct ov5693_device *sensor, u16 address,
+			      u16 mask, u16 bits)
+{
+	u16 value = 0;
+	int ret;
+
+	ret = ov5693_read_reg(sensor->i2c_client, OV5693_8BIT, address, &value);
+	if (ret)
+		return ret;
+
+	value &= ~mask;
+	value |= bits;
+
+	ret = ov5693_write_reg(sensor->i2c_client, OV5693_8BIT, address, value);
+	if (ret)
+		return ret;
+
+	return 0;
+}
